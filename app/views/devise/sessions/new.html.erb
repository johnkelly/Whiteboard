<div class="page-header center">
  <h1>Sign In</h1>
</div>
<div class="well span-7 offset4">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="input-prepend">
      <%= f.label :email %>
      <span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email %>
    </div>

    <div class="mt15 input-prepend">
      <%= f.label :password %>
      <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="mt15">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, class: "inline" %>
      </div>
    <% end -%>

    <div class="mt15"><%= f.submit "Sign in" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>