<div class="page-header center">
  <h1>Join Whiteboard</h1>
</div>
<div class="well span-7 offset4">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-prepend">
      <%= f.label :email %>
      <span class="add-on"><i class="icon-envelope"></i></span><%= f.email_field :email %>
    </div>

    <div class="mt15 input-prepend">
      <%= f.label :password %>
      <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password %>
    </div>

    <div class="mt15 input-prepend">
      <%= f.label :password_confirmation %>
      <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password_confirmation %>
    </div>

    <div class="mt15"><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
