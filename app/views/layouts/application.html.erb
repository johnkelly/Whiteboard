<!DOCTYPE html>
<html>
<head>
  <title>Project Name</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Project Name", root_path, class: "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Link 1" %></li>
          <li><%= link_to "Link 2" %></li>
          <li><%= link_to "Link 3" %></li>
        </ul>
        <ul class="nav pull-right">
          <%- if current_user -%>
            <li><%= link_to "<i class='icon-user icon-white'></i> My Account".html_safe, edit_user_registration_path %></li>
            <li><%= link_to "<i class='icon-off icon-white'></i> Sign Out".html_safe, destroy_user_session_path, method: :delete  %></li>
          <%- else -%>
            <li><%= link_to "Sign In", new_user_session_path %></li>
          <%- end -%>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <%- if flash[:alert].present? -%>
    <div class="alert alert-warning">
      <button class="close" data-dismiss="alert">×</button>
      <%= flash[:alert] %>
    </div>
  <%- elsif flash[:notice].present? -%>
    <div class="alert alert-info">
      <button class="close" data-dismiss="alert">×</button>
      <%= flash[:notice] %>
    </div>
  <%- end -%>
  <%= yield %>
</div>

</body>
</html>
